{
  "name": "craft-web-monorepo",
  "version": "1.0.0",
  "description": "Craft Web - E-commerce platform with admin dashboard",
  "private": true,
  "type": "module",
  "workspaces": [
    "admin",
    "user-site"
  ],
  "scripts": {
    "build:all": "npm run build:admin && npm run build:user-site",
    "build:admin": "cd admin && npm run build",
    "build:user-site": "cd user-site && npm run build",
    "dev:admin": "cd admin && npm run dev",
    "dev:user-site": "cd user-site && npm run dev",
    "install:all": "npm run install:admin && npm run install:user-site",
    "install:admin": "cd admin && npm install",
    "install:user-site": "cd user-site && npm install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "eslint-config-next": "^15.5.4"
  }
}
